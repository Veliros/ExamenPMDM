<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Subactivity">

    <TextView
        android:id="@+id/destinatario"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="375dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/asunto"
        app:layout_constraintStart_toStartOf="@+id/asunto"
        app:layout_constraintTop_toBottomOf="@+id/asunto" />

    <TextView
        android:id="@+id/asunto"
        android:layout_width="277dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="180dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/btnCerrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:id="@+id/mensaje"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="302dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/destinatario"
        app:layout_constraintStart_toStartOf="@+id/destinatario"
        app:layout_constraintTop_toBottomOf="@+id/asunto" />

    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="205dp"
        android:text="Cerrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mensaje"
        app:layout_constraintTop_toBottomOf="@+id/asunto" />
</android.support.constraint.ConstraintLayout>